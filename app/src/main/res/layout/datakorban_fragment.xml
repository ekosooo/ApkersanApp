<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/putih"
    android:id="@+id/IsiLaporan"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/TvDataKorban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Korban"
                    android:textColor="@color/hitam"
                    android:textSize="18sp"
                    fontPath="font/SFProDisplay-Bold.ttf"
                    tools:ignore="MissingPrefix"/>

                <View
                    android:layout_marginTop="4dp"
                    android:layout_width="105dp"
                    android:layout_height="2dp"
                    android:background="@color/hijauflat"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <EditText
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/styleinput"
                    android:textColor="@color/hitam"
                    android:hint="E.g Windaa"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:inputType="text"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        android:paddingRight="20dp"
                        android:text="Laki-laki"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Perempuan"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>
                </RadioGroup>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disabilitas"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        android:paddingRight="20dp"
                        android:text="Ya"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>
                </RadioGroup>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usia"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:layout_marginTop="2dp"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/styleinput"
                            android:textColor="@color/hitam"
                            android:hint="E.g 24"
                            android:textSize="14dp"
                            android:padding="10dp"
                            android:inputType="number"
                            fontPath="font/SFProDisplay-Regular.ttf"
                            tools:ignore="MissingPrefix"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="28dp">

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tahun"
                            android:textStyle="bold"
                            android:textColor="@color/hijauflat"
                            android:textSize="14sp"
                            fontPath="font/SFProDisplay-Regular.ttf"
                            tools:ignore="MissingPrefix"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pendidikan"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/pendidikan"
                    android:background="@drawable/styleinput"
                    android:paddingLeft="-10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pekerjaan"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        android:paddingRight="20dp"
                        android:text="Ya"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                    <RadioButton
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Tidak"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="@color/hijauflat"
                        android:background="@drawable/radio_button_status"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>
                </RadioGroup>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Kawin"
                    android:textSize="14sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/status_kawin"
                    android:background="@drawable/styleinput"
                    android:paddingLeft="-10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    tools:ignore="MissingPrefix"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>