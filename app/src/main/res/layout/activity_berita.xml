<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    tools:context=".BeritaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/hitam">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/IvBerGambar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageButton
                        android:id="@+id/BtBackBerita"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/bg_buttonback"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_arrow_back"
                        android:stateListAnimator="@null"/>

                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/TvBerJudul"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Judul Berita"
                    android:textColor="@color/hitam"
                    android:textSize="17sp"
                    fontPath="font/SFProDisplay-Bold.ttf"
                    tools:ignore="MissingPrefix"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TvBuat"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="created_at"
                        android:textSize="13sp"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penulis"
                        android:textSize="13sp"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                    <TextView
                        android:id="@+id/TvPenulis"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Nama Penulis"
                        android:textSize="13sp"
                        fontPath="font/SFProDisplay-Regular.ttf"
                        tools:ignore="MissingPrefix"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/TvKonten"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Konten"
                    android:textSize="13sp"
                    fontPath="font/SFProDisplay-Regular.ttf"
                    tools:ignore="MissingPrefix"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>