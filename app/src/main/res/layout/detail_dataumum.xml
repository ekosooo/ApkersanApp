<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:paddingTop="20dp"
    android:paddingRight="25dp"
    android:paddingLeft="25dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/TvDataKorban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Umum"
        android:textColor="@color/hitam"
        android:textSize="16sp"
        fontPath="font/SFProDisplay-Bold.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. Tiket"
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/TvNoTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lorem.."
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Pelapor"
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/TvStatusPelapor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lorem.."
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kasus"
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/TvJenisKasus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lorem.."
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bentuk Kekerasan"
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>

    <TextView
        android:id="@+id/TvBentukKekerasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lorem.."
        android:textSize="14sp"
        fontPath="font/SFProDisplay-Regular.ttf"
        tools:ignore="MissingPrefix"/>
</LinearLayout>